@model IEnumerable<Daily_Use_App.Models.MoodEntry>

<h2>Mood Entries</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Add Mood Entry</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Score</th>
            <th>Note</th>
            <th>Checked At</th>
            <th>User</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Score</td>
                <td>@item.Note</td>
                <td>@item.CheckedAt.ToShortDateString()</td>
                <td>@item.User?.Id</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
