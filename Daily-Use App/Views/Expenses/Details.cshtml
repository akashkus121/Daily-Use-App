@model Daily_Use_App.Models.Expense

<h2>Expense Details</h2>

<div>
    <strong>Amount:</strong> @Model.Amount <br />
    <strong>Description:</strong> @Model.Description <br />
    <strong>Spent On:</strong> @Model.SpentOn.ToShortDateString() <br />
    <strong>Category:</strong> @Model.Category?.Name <br />
    <strong>User:</strong> @Model.User?.Id <br />
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>
