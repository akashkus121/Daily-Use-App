@model IEnumerable<Daily_Use_App.Models.Note>

<h2>Notes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Add Note</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card @(item.IsPinned ? "border-warning" : "border-secondary")">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Content</p>
                    <small class="text-muted">Created: @item.CreatedAt.ToShortDateString()</small>
                    @if (item.UpdatedAt != null)
                    {
                        <br />
                
                        <small class="text-muted">Updated: @item.UpdatedAt?.ToShortDateString()</small>
                    }
                    <div class="mt-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
