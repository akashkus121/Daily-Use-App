<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Daily_Use_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Daily_Use_App.styles.css" asp-append-version="true" />
</head>
<body>
   
    <nav class="navbar navbar-expand navbar-light bg-light mb-3">
        <div class="container">
            <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">Daily Use</a>
            <div class="navbar-nav">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <a class="nav-link" asp-controller="Expenses" asp-action="Index">Expenses</a>
                <a class="nav-link" asp-controller="MoodEntries" asp-action="Index">Mood</a>
                <a class="nav-link" asp-controller="UtilityStatus" asp-action="Index">Utilities</a>
                <a class="nav-link" asp-controller="Notes" asp-action="Index">Notes</a>
            </div>
            <div class="ms-auto">
                <a class="btn btn-sm btn-outline-primary" asp-controller="Auth" asp-action="Login">Login</a>
                <a class="btn btn-sm btn-outline-secondary" asp-controller="Auth" asp-action="Register">Register</a>
                <a class="btn btn-sm btn-outline-danger" asp-controller="Auth" asp-action="Logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Daily_Use_App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
