@{
    ViewData["Title"] = "Set Location";
}

<h2>Set Location</h2>

<form asp-action="SetLocation" method="post">
    <div class="mb-3">
        <label class="form-label">Location</label>
        <input class="form-control" name="location" placeholder="City/Area" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.AntiForgeryToken()
</form>

